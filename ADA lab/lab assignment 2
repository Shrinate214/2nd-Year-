s = "PackcaP"
start = 0
end = len(s)-1

while (start< end) :
          if (s[start] != s[end]): 
                print("false, not a palindrome")
                break
          start=start+1
          end=end-1
if (start >= end):
          print("true, it is palindrome")
                
#problem 2 
def power( num, exp):
  if(exp==0):
    return 1
  return(num*(power(num,exp-1))) 
power(7,3)
